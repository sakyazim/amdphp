{
    "name": "amds/akademik-makale-sistemi",
    "description": "AMDS - Akademik Makale DeÄŸerlendirme Sistemi (Multi-Tenant SaaS Platform)",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-mysqli": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "phpmailer/phpmailer": "^6.8",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
