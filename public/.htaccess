# AMDS - Apache Configuration
# Tüm istekleri index.php'ye yönlendir

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Base path (XAMPP htdocs'taki klasör adı)
    RewriteBase /amdsphp/public/

    # Dosya veya klasör değilse index.php'ye yönlendir
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Güvenlik
<FilesMatch "\.(env|json|lock|md|gitignore)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PHP Ayarları
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
