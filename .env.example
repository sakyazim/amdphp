# AMDS - Ortam Degiskenleri (Environment Variables)
# Bu dosyayi kopyalayip .env olarak kaydedin ve kendi degerlerinizi girin

# Uygulama Ayarlari
APP_NAME="AMDS - Akademik Makale Degerlendirme Sistemi"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Veritabani Ayarlari (Core Database)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=amds_core
DB_USERNAME=root
DB_PASSWORD=

# SMTP / E-posta Ayarlari
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@amds.com
MAIL_FROM_NAME="${APP_NAME}"

# Guvenlik
SESSION_LIFETIME=120
CSRF_TOKEN_NAME=_csrf_token

# Dosya Yukleme
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Sistem
TIMEZONE=Europe/Istanbul
LOCALE=tr_TR
DEFAULT_LANGUAGE=tr
